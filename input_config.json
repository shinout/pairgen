/**
 * input config file.
 * if set to null, then uses default value.
 *
 **/

{ file      : 'test/sample.fasta' // path of FASTA file.
, name      : 'NAME'       // name of the sequence. Any string is allowed. default = basename(file)
, seq_id    : null     // id of the sequence determined by FASTA. If null, then uses the first fasta.
, width     : 200        // mean pair distance ( width + readlen * 2 == total flagment length ) default = 200
, readlen   : 50        // length of the read. default = 108
, dev       : 10         // standard deviation of the total fragment length. default = 50
, depth     : 50         // physical read depth. default = 40
, save_dir  : null        // directory to save result. default = '.'
, leftname  : null        // filename of the left result name.
, rightname : null        // filename of the right result name.
, parallel  : 5       // how many processes to run. default = 1
}
