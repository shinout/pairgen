/**
 * input config file.
 * if set to null, then uses default value.
 *
 **/

{ file      : 'test/sample.fasta' // path of FASTA file.
, name      : null       // name of the sequence. Any string is allowed. default = basename(file)
, seq_id    : 'sample1'     // id of the sequence determined by FASTA.
, width     : 350        // mean pair distance ( width + readlen * 2 == total flagment length ) default = 200
, readlen   : 108        // length of the read. defaul t= 108
, dev       : 50         // standard deviation of the total fragment length. default = 50
, depth     : 50         // physical read depth. default = 40
, save_dir  : null        // directory to save result. default = '.'
, leftname  : null        // filename of the left result name.
, rightname : null        // filename of the right result name.
, parallel  : 10       // how many processes to run. default = 1
}
